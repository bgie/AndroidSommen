<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/lblChoosePlayer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/txtLblChooseAPlayer" />

    <ListView
        android:id="@+id/lstPlayers"
        android:layout_width="fill_parent"
        android:layout_height="217dp"
        android:layout_weight="0.00" >
    </ListView>

    <TextView
        android:id="@+id/lblNewPlayer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txtLblNewPlayer" />

    <TextView
        android:id="@+id/lblName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txtLblName" />

    <EditText
        android:id="@+id/txtName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/lblAge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txtLblAge" />

    <EditText
        android:id="@+id/txtAge"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:ems="10" 
        android:inputType="number"
        />

    <Button
        android:id="@+id/btnCreatePlayer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/txtBtnCreateNewPlayer" />

</LinearLayout>